{
    "name": "kraken-php/kraken",
    "description": "Kraken Framework Application Skeleton",
    "keywords": [
        "kraken", "kraken-php", "framework"
    ],
    "license": "MIT",
    "type": "project",
    "require": {
        "php": ">=5.6.7",
        "kraken-php/framework": "0.5.*"
    },
    "autoload": {
        "psr-4": {
            "App\\": "app"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Test\\": "test"
        }
    },
    "config": {
        "vendor-dir": "vendor"
    },
    "scripts": {
        "post-root-package-install": [
            "php ./data/script/script.install"
        ]
    },
    "minimum-stability": "dev",
    "prefer-stable": true
}
